{% extends 'base.html.twig' %}

{% block title %}{{ article.titre  }}
{% endblock %}

{% block body %}

    {% include "navbar.html.twig" %}
    <main>
        <div class="container">
            <div class="row text-center">
                <h1 class="h3 mb-3 font-weight-normal text-center">{{article.titre}}</h1>
                <div class="card">
                    <div style="align-text: center;">
                        <img src={{article.image|default("https://via.placeholder.com/150")}} style="width: 500px;" class="card-img-top" alt="...">
                    </div>
                    <p>{{article.contenu | raw}}</p>
                    <div class="card">
                        {{article.auteur.username}}
                    </div>
                    <div class="card-footer text-muted">
                        {{article.date | date("d/m/Y")}} 
                        {% if article.datemodif != null %}
                            <br><i>Modif√© le : {{article.datemodif | date("d/m/Y")}}</i>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </main>

    {% include "commentaire/form.html.twig" %}
    {% include "commentaire/show.html.twig" %}

    {% include "footer.html.twig" %}

{% endblock %}


