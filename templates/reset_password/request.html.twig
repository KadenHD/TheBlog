{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}

        {% include "navbar.html.twig" %}
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <main>
                <div class="container">
                        <div class="row">
                                <h1 class="h3 mb-3 font-weight-normal text-center"> Réinitialisation de mot de passe  </h1>
                                <div class="card text-center">
                                    {{ form_start(requestForm) }}
                                        {{ form_row(requestForm.email, {'attr': {'placeholder': "Saisissez votre adresse Email"}}) }}
                                        <div>
                                            <small>
                                                Entrez votre adresse mail, nous allons par la suite vous envoyer 
                                                un lien pour réaliser la réinitialisation de votre mot de passe
                                            </small>
                                        </div>

                                        <button class="btn btn-primary" onclick="return confirm('Voulez-vous vraiment envoyer cette demande ?')">Envoyer</button>
                                    {{ form_end(requestForm) }}
                                </div>
                        </div>
                </div>
        </main>
        {% include "footer.html.twig" %}
{% endblock %}